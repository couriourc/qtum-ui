{
  "name": "qtum-ui",
  "version": "1.0.0",
  "description": "",
  "packageManager": "pnpm@8.4.0",
  "type": "module",
  "scripts": {
    "docs:dev": "pnpm run dev --filter docs dev",
    "docs:build": "pnpm run build --filter docs build"
  },
  "author": "Qtum",
  "nano-staged": {
    "*.{ts,tsx,js,jsx,vue}": "eslint --fix"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-beta.1",
    "vue": "^2.0.0 || >=3.0.0-rc.0"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "gulp-sass": "^5.1.0",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "sass": "^1.62.1",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": []
  },
  "prettier": {
    "singleQuote": true
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  },
  "browserslist": [
    "Android >= 4.0",
    "iOS >= 8"
  ],
  "dependencies": {
    "gulp-typescript": "6.0.0-alpha.1"
  }
}
